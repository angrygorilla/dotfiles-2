#!/usr/bin/env bash

os_upgrade() {
    sudo true
    sudo aptitude update
    sudo aptitude safe-upgrade -y
    sudo aptitude autoclean -y
    sudo aptitude clean -y
}

hadolint_upgrade() {
    if command -v docker >/dev/null 2>&1; then
        docker pull hadolint/hadolint
    fi
}

pyenv_upgrade() {
    if command -v pyenv >/dev/null 2>&1; then
        pyenv update
        pyenv rehash
    fi
}
nodenv_upgrade() {
    if command -v pyenv >/dev/null 2>&1; then
        nodenv update
        nodenv rehash
    fi
}

os_upgrade
hadolint_upgrade
pyenv_upgrade
nodenv_upgrade
